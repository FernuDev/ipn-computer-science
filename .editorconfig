# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# C files
[*.{c,h}]
indent_style = space
indent_size = 4
max_line_length = 100

# C++ files
[*.{cpp,hpp}]
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Arduino files
[*.ino]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 0

